{
  "manifest_version": 2,
  "name": "Pinboard Simple",
  "version": "",
  "description": "Google Chrome extension for Pinboard (https://pinboard.in).",
  "author": "Ali Karbassi",
  "homepage_url": "https://github.com/karbassi/pinboard-pro-chrome-extension",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Pinboard",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/pinboard.js",
      "js/background.js"
    ]
  },
  "commands": {
    "save": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Save bookmark"
    },
    "read_later": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      },
      "description": "Read later"
    },
    "save_tabs": {
      "description": "Save all tabs"
    },
    "all": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "All bookmarks"
    },
    "unread": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "MacCtrl+Shift+U"
      },
      "description": "Unread bookmarks"
    },
    "random": {
      "description": "Random unread"
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "https://pinboard.in/tabs/save/",
    "storage",
    "tabs",
    "https://pinboard.in/tabs/save/"
  ]
}